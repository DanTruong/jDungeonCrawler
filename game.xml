<?xml version="1.0" encoding="UTF-8"?>
<GameWorld>
    <Entities>
        <NPC id="human-1" name="Brittany" description="Likes to watch football on the TV." />
        <NPC id="human-2" name="Steve" description="Enjoys watching action films in the player's living room." />
        <NPC id="human-3" name="Marissa" description="Likes to setup card games in the dining room." />
        <NPC id="cat-1" name="Whiskers" description="The player's timid cat." />
        <NPC id="dog-1" name="Spot" description="The player's joyful dog." />
        <Enemy id="house-fly" name="House Fly" description="An annoying fly that likes to buzz around pungent areas." />
        <Enemy id="wasp" name="Wasp" description="Dangerous insect whose sting can hurt." />
        <Enemy id="rat" name="Rat" description="An annoying rat that likes to get into crevices and scurry around." />
        <Player id="player-1" name="Danny" description="The owner of this awesome house." />
    </Entities>
    <Sectors>

        <Sector id="living-room" name="Living Room" description="Where you can watch TV and relax." state="warm">
            <Exits>
                <Exit direction="north" target="main-bdrm" />
                <Exit direction="south" target="front-porch" />
                <Exit direction="east" target="kitchen" />
                <Exit direction="west" target="hallway" />
            </Exits>
            <Occupants>
                <NPC ref="human-1" />
                <NPC ref="human-2" />
            </Occupants>
        </Sector>

        <Sector id="main-bdrm" name="Main Bedroom" description="Where the main homeowner sleeps." state="cool">
            <Exits>
                <Exit direction="south" target="living-room" />
                <Exit direction="east" target="main-bthrm" />
            </Exits>
            <Occupants>
                <Enemy ref="house-fly" />
            </Occupants>
        </Sector>

        <Sector id="jr-bdrm-1" name="Junior Bedroom 1" description="A bedroom for either a kid or a guest." state="cold">
            <Exits>
                <Exit direction="south" target="hallway" />
            </Exits>
        </Sector>

        <Sector id="jr-bdrm-2" name="Junior Bedroom 2" description="Another place for kids or guests to sleep." state="cold">
            <Exits>
                <Exit direction="east" target="hallway" />
            </Exits>
        </Sector>

        <Sector id="hallway" name="Hallway" description="A connecting corridor between the bathrooms and bedrooms." state="cool">
            <Exits>
                <Exit direction="north" target="jr-bdrm-1" />
                <Exit direction="south" target="half-bthrm" />
                <Exit direction="east" target="living-room" />
                <Exit direction="west" target="jr-bdrm-2" />
            </Exits>
            <Occupants>
                <NPC ref="cat-1" />
            </Occupants>
        </Sector>

        <Sector id="kitchen" name="Kitchen" description="Where food is prepared and stored." state="hot">
            <Exits>
                <Exit direction="south" target="dining-room" />
                <Exit direction="east" target="garage" />
                <Exit direction="west" target="living-room" />
            </Exits>
            <Occupants>
                <Enemy ref="house-fly" />
            </Occupants>
        </Sector>

        <Sector id="dining-room" name="Dining Room" description="Where food is eaten and guests are entertained." state="hot">
            <Exits>
                <Exit direction="north" target="kitchen" />
            </Exits>
            <Occupants>
                <NPC ref="human-3" />
            </Occupants>
        </Sector>

        <Sector id="main-bthrm" name="Main Bathroom" description="The bathroom attached to the main bedroom." state="warm">
            <Exits>
                <Exit direction="west" target="main-bdrm" />
            </Exits>
            <Occupants>
                <NPC ref="dog-1" />
            </Occupants>
        </Sector>

        <Sector id="half-bthrm" name="Half Bathroom" description="Located in the hallway; only contains a toilet and sink." state="warm">
            <Exits>
                <Exit direction="north" target="hallway" />
            </Exits>
            <Occupants>
                <Enemy ref="house-fly" />
                <Enemy ref="house-fly" />
                <Enemy ref="house-fly" />
                <Enemy ref="house-fly" />
                <Enemy ref="house-fly" />
                <Enemy ref="house-fly" />
                <Player ref="player-1" />
            </Occupants>
        </Sector>

        <Sector id="front-porch" name="Front Porch" description="The entrance to the house." state="hot">
            <Exits>
                <Exit direction="north" target="living-room" />
            </Exits>
            <Occupants>
                <Enemy ref="wasp" />
            </Occupants>
        </Sector>

        <Sector id="garage" name="Garage" description="Where vehicles and tools are stored." state="hot">
            <Exits>
                <Exit direction="west" target="kitchen" />
            </Exits>
            <Occupants>
                <Enemy ref="rat" />
                <Enemy ref="rat" />
                <Enemy ref="rat" />
            </Occupants>
        </Sector>

    </Sectors>

</GameWorld>
